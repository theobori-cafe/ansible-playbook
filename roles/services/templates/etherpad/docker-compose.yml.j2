version: '3.3'

services:
  etherpad:
    container_name: etherpad
    ports:
      - '127.0.0.1:9001:9001'
    environment:
      DB_TYPE: postgres
      DB_HOST: db
      DB_PORT: 5432
      DB_NAME: etherpad
      DB_USER: {{ etherpad_db_user }}
      DB_PASS: {{ etherpad_db_password }}
      DEFAULT_PAD_TEXT: {{ fqdn }} notepad
      TITLE: {{ fqdn }}
      ADMIN_PASSWORD: {{ etherpad_admin_password }}
    image: etherpad/etherpad:1.8.17
    
  db:
    image: postgres:11-alpine
    environment:
      POSTGRES_DB: etherpad
      POSTGRES_PASSWORD: {{ etherpad_db_password }}
      POSTGRES_USER: {{ etherpad_db_user }}
    logging:
      driver: "none"
    volumes:
      - etherpad_db:/var/lib/postgresql/data

volumes:
  etherpad_db: