version: '3'

services:
  db:
    image: postgres:15
    volumes:
      - joplindb:/var/lib/postgresql/data
    ports:
      - "127.0.0.1:5432:5432"
    restart: unless-stopped
    environment:
      - POSTGRES_PASSWORD={{ joplin_db_password }}
      - POSTGRES_USER={{ joplin_db_user }}
      - POSTGRES_DB=joplin
  app:
    image: joplin/server:latest
    depends_on:
      - db
    ports:
      - "127.0.0.1:22300:22300"
    restart: unless-stopped
    environment:
      - APP_PORT=22300
      - APP_BASE_URL=https://joplin.{{ fqdn }}
      - DB_CLIENT=pg
      - POSTGRES_PASSWORD={{ joplin_db_password }}
      - POSTGRES_DATABASE=joplin
      - POSTGRES_USER={{ joplin_db_user }}
      - POSTGRES_PORT=5432
      - POSTGRES_HOST=db
      - MAILER_ENABLED=1
      - MAILER_HOST={{ joplin_mailer_host }}
      - MAILER_PORT=465
      - MAILER_SECURE=1
      - MAILER_AUTH_USER={{ joplin_mailer_user }}
      - MAILER_AUTH_PASSWORD={{ joplin_mailer_password }}
      - MAILER_NOREPLY_NAME=Joplin
      - MAILER_NOREPLY_EMAIL={{ joplin_mailer_user }}

volumes:
  joplindb: